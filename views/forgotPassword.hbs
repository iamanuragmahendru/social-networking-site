<div class="container-fluid p-3 mb-2 bg-light text-dark">
    <form action="/forgotpassword" method="post">
        <div class="form-group">
            <label for="userEmail">Username/Email address</label>
            <input type="email" name="username" class="form-control" id="userEmail" aria-describedby="emailHelp"
                placeholder="Enter email">
        </div>
        <div class="form-group">
            <label for="inputDOB">D.O.B.</label>
            <input type="date" class="form-control" name="DOB" id="inputDOB">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

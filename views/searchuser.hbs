<div class="container-fluid bg-light text-dark">
    <div class="row">
        {{>sidebar}}
        <div class="col-10">
            <div class="row">
                <div class="col">
                    <h2 class="col text-center">Search</h1>
                </div>
            </div>
            <div id="searchResults">
                <div>
                    <h3>Searched for : {{query}}</h3>
                </div>
                <div>
                    {{#each searchResults as |user|}}
                    <div class="card m-1">
                    {{user.firstName}}
                    {{user.lastName}}<br>
                    <a href="/profiles/{{user.uid}}">Goto Profile</a>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container bg-light text-dark">
    <div class="row">
        {{>sidebar}}
        <div class="col-10">
            <form action="/api/userdetails/changepassword" method="post">
                <div class="form-group">
                    <label for="currentUserPassword">Current Password</label>
                    <input type="password" class="form-control" id="userPassword" name="currentPassword"
                        placeholder="Current Password">
                </div>
                <div class="form-group">
                    <label for="newUserPassword">New Password</label>
                    <input type="password" class="form-control" id="newUserPassword" name="newPassword"
                        placeholder="New Password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <a href="/forgotpassword">Forgot Password</a>
        </div>
    </div>
</div>